<div class="container">
	<% if @lists %>
	<% @lists.each do |list| %>
	<div class='box-favorite'>
		<table class="table table-bordered">
			<h2><center>Name List: <%= list.name %></center></h2>
			<% @tasks.each do |task| %>
			<% if task.list_id == list.id %> 
			<tbody>
				<tr>
					<td><center>Task Description: <%= task.description %></center></td>	
				</tr>
			</tbody>
			<% end %>
			<% end %>
		</table>
		<div class="form-group">
			<center>
				<% @favorites.each do |favorite| %>
				<% if favorite.list_id == list.id %> 
				<button id='block-favorite-<%= favorite.id %>' type="button" favorite-id='<%= favorite.id %>' class='remove-favorite btn btn-default'>
					Remove Favorite
				</button> 
				<% end %>
				<% end %>
			</center>
		</div>
	</div>
	<% end %>
	<% end %> 
</div>