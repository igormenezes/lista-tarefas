<div class="container">
	<% if @lists %>
	<% @lists.each do |list| %>
	<div id='block-list-<%= list.id %>'>
		<table class="table table-bordered">
			<h2><center>Name List: <%= list.name %></center></h2>
			<% @tasks.each do |task| %>
			<% if task.list_id == list.id %> 
			<tbody>
				<tr>
					<td><center>Task Description: <%= task.description %></center></td>	
				</tr>
			</tbody>
			<% end %>
			<% end %>
		</table>
		<div class="form-group">
			<center>
				<button type="button" id='<%= list.id %>' class='add-favorite btn btn-default'>
					Add Favorite
				</button> 
			</center>
		</div>
	</div>
	<% end %>
	<% end %> 
</div>
